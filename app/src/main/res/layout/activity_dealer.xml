<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dealer">


  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Country:> IND"
      android:textSize="34dp"
      app:layout_constraintBottom_toTopOf="@+id/textView4"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="47dp"
      android:layout_height="20dp"

      android:layout_marginStart="20dp"
      android:text="State"
      android:textSize="16dp"
      app:layout_constraintBottom_toTopOf="@+id/state"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2" />

  <Spinner
      android:id="@+id/state"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="20dp"
      app:layout_constraintBottom_toTopOf="@+id/textView5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView4" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="47dp"
      android:layout_height="18dp"
      android:layout_marginStart="16dp"
      android:text="City"
      android:textSize="16dp"
      app:layout_constraintBottom_toTopOf="@+id/City"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/state" />

  <Spinner
      android:id="@+id/City"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="20dp"
      app:layout_constraintBottom_toTopOf="@+id/Name"
      app:layout_constraintTop_toBottomOf="@+id/textView5"
      tools:layout_editor_absoluteX="95dp" />

  <EditText
      android:id="@+id/Business"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="20dp"
      android:hint="Business Name"
      android:textColorHint="@color/black"
      app:layout_constraintBottom_toTopOf="@+id/Ragister"
      app:layout_constraintTop_toBottomOf="@+id/Name"
      tools:layout_editor_absoluteX="24dp" />

  <EditText
      android:id="@+id/Name"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="20dp"
      android:hint="Name"
      android:textColorHint="@color/black"
      app:layout_constraintBottom_toTopOf="@+id/Business"
      app:layout_constraintTop_toBottomOf="@+id/City"
      tools:layout_editor_absoluteX="28dp" />

  <Button
      android:id="@+id/Ragister"
      android:layout_width="350dp"
      android:layout_height="50dp"
      android:layout_marginStart="20dp"
      android:text="submit"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Business" />

</androidx.constraintlayout.widget.ConstraintLayout>